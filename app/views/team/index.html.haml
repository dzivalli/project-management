- content_for :project do
  .panel.panel-primary
    .panel-heading
      .panel-title
        = link_to 'Изменить', new_project_team_path(@project), class: 'btn btn-default get-modal'
    .panel-body.with-table
      %table.pm-table.table.table-bordered.datatable
        %thead
          %tr
            %th Аватар
            %th Email
            %th Полное имя
            %th Телефон
            %th Email
        %tbody
          - @project.users.each do |member|
            %tr
              %td= image_tag member.avatar.file.thumb.url, class: 'img-circle', width: 44
              %td= member.email
              %td= member.full_name
              %td= member.phone
              %td= member.email