= form_for @project, html: { class: 'form-horizontal form-groups-bordered' } do |f|
  .modal-dialog
    .modal-content
      .modal-header
        = button_tag '×', type: 'button', class: 'close', data: { dismiss: 'modal'}, html: { 'aria-hidden' => 'true' }
        %h4.modal-title Новый проект
      .modal-body
        = render partial: 'form', locals: {f: f}
      .modal-footer
        = button_tag 'Закрыть', type: 'button', class: 'btn btn-default', data: { dismiss: 'modal'}
        = button_tag 'Сохранить', type: 'button', id: 'project-save', class: 'btn btn-info'
