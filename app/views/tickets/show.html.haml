.row
  .col-sm-3
    =render 'sidebar'
  .col-sm-9
    .panel.panel-primary
      .panel-heading
        .panel-title
          = link_to 'Изменить', edit_ticket_path(@ticket), class: 'btn btn-default get-modal'
          = link_to 'Сменить статус', '#', class: 'btn btn-default'
        .panel-title.pull-right
          = link_to 'Удалить', '#', class: 'btn btn-default'
      .panel-body
        .row
          .col-sm-4
            .list-group
              .list-group-item
                Код
                .pull-right= @ticket.code
              .list-group-item
                Создал
                .pull-right= @ticket.user.full_name
              .list-group-item
                Статус
                .pull-right= status_label @ticket.status
              .list-group-item
                Приоритет
                .pull-right= @ticket.priority
              .list-group-item
                Создан
                .pull-right= convert_time @ticket.created_at
              %hr
              %P
                Тема:
                %strong= @ticket.subject
              %blockquote
                = @ticket.body
          .col-sm-8




