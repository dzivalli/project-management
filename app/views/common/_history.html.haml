.panel.panel-default
  .panel-body
    %ul.cbp_tmtimeline
      - @versions.each do |version|
        %li
          %time.cbp_tmtime
            %span= version.created_at.strftime('%R')
            %span= version.created_at.strftime('%d %B')
          .cbp_tmicon
            %i.entypo-user
          .cbp_tmlabel
            %h2= version.whodunnit
            %p= "#{I18n.t(version.event)} #{I18n.t(version.item_type.downcase)} #{get_name(version)}"

