%h3
  = "Детали - #{@company.name}"
  = link_to edit_company_path(@company), class: 'btn btn-blue btn-icon icon-left pull-right get-modal' do
    Изменить
    %i.entypo-pencil
%br
.panel.panel-default
  .panel-body
    .col-md-6
      %h4 Детали компании
      .row
        .col-md-4 Название
        .col-md-6= @company.name
      .row
        .col-md-4 Email
        .col-md-6= @company.email
      .row
        .col-md-4 Контакт
        .col-md-6= (@company.contact.full_name if @company.contact)
      %h4 Другие детали
      .row
        .col-md-4 Город
        .col-md-6= @company.city
    .col-md-6
      %h4 Полученные платежи
  .panel-body
    .col-md-12
      =render 'users'
    .col-md-6
      .panel.panel-default.panel-shadow
        .panel-heading
          .panel-title
            %i.entypo-doc-text
            Счета
        .panel-body
    .col-md-6
      = render 'projects'




