= form_for @company do |f|
  .row
    .col-md-6
      .form-group
        =f.label 'Имя компании', nil, class: 'control-label'
        =f.text_field :name, class: 'form-control'
    .col-md-6
      .form-group
        =f.label 'Email', nil, class: 'control-label'
        =f.text_field :email, class: 'form-control'
  .row
    .col-md-12
      .form-group
        =f.label 'Адрес', nil, class: 'control-label'
        =f.text_field :address, class: 'form-control'
  .row
    .col-md-4
      .form-group
        =f.label 'Город', nil, class: 'control-label'
        =f.text_field :city, class: 'form-control'
    .col-md-4
      .form-group
        =f.label 'Вебсайт', nil, class: 'control-label'
        =f.text_field :website, class: 'form-control'
    .col-md-4
      .form-group
        =f.label 'Телефон', nil, class: 'control-label'
        =f.text_field :phone, class: 'form-control'
