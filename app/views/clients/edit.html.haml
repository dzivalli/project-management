.container
  .well.well-sm
    %h4 Пожалуйста, введите данные
  = form_for @client, html: {class: 'form-wizard validate'} do |f|
    .steps-progress
      .progress-indicator
    %ul
      %li.active
        %a{"data-toggle" => "tab", :href => "#tab2-1"}
          %span> 1
          Личная информация
      %li
        %a{"data-toggle" => "tab", :href => "#tab2-2"}
          %span> 2
          Данные компании
    .tab-content
      #tab2-1.tab-pane.active
        = f.fields_for :owner do |o|
          .row
            .col-md-6
              .form-group
                %label.control-label{:for => "full_name"} Полное имя
                = o.text_field :full_name, placeholder: 'Имя и фамилия', class: 'form-control', data: {validate: 'required'}
            .col-md-6
              .form-group
                %label.control-label{:for => "phone"} Телефон
                = o.text_field :phone, class: 'form-control'
          .row
            .col-md-6
              .form-group
                %label.control-label Пароль
                .input-group
                  .input-group-addon
                    %i.entypo-key
                  = o.password_field :password, class: 'form-control', data: {validate: 'required'}
            .col-md-6
              .form-group
                %label.control-label Подтверждение пароля
                .input-group
                  .input-group-addon
                    %i.entypo-cw
                  = o.password_field :password_confirmation, class: 'form-control', data: {validate: 'required'}
      #tab2-2.tab-pane
        = f.fields_for :main_company do |m|
          .row
            .col-md-6
              .form-group
                =m.label 'Имя компании', nil, class: 'control-label'
                =m.text_field :name, class: 'form-control', data: {validate: 'required'}
            .col-md-6
              .form-group
                =m.label 'Email', nil, class: 'control-label'
                =m.text_field :email, class: 'form-control', data: {validate: 'required,email'}
          .row
            .col-md-12
              .form-group
                =m.label 'Адрес', nil, class: 'control-label'
                =m.text_field :address, class: 'form-control', data: {validate: 'required'}
          .row
            .col-md-4
              .form-group
                =m.label 'Город', nil, class: 'control-label'
                =m.text_field :city, class: 'form-control', data: {validate: 'required'}
            .col-md-4
              .form-group
                =m.label 'Вебсайт', nil, class: 'control-label'
                =m.text_field :website, class: 'form-control'
            .col-md-4
              .form-group
                =m.label 'Телефон', nil, class: 'control-label'
                =m.text_field :phone, class: 'form-control'
        .form-group
          = f.submit 'Закончить регистрацию', class: 'btn btn-primary'
      %ul.pager.wizard
        %li.previous
          %a{:href => "#"}
            %i.entypo-left-open
            Предыдущая
        %li.next
          %a{:href => "#"}
            Следующая
            %i.entypo-right-open