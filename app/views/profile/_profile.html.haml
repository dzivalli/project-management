= form_for @user, url: profile_path(@user), html: { class: 'form-horizontal' } do |f|

  .form-group
    =f.label 'Аватар', nil, class: 'col-sm-3 control-label'
    .col-sm-9
      .fileinput.fileinput-new{"data-provides" => "fileinput"}
        .fileinput-new.thumbnail{"data-trigger" => "fileinput", :style => "width: 200px; height: 200;"}
          = image_tag @user.avatar.url
        .fileinput-preview.fileinput-exists.thumbnail{:style => "max-width: 200px; max-height: 200px"}
        %div
          %span.btn.btn-white.btn-file
            %span.fileinput-new Выбрать картинку
            %span.fileinput-exists Изменить
            = f.file_field  :avatar
          %a.btn.btn-orange.fileinput-exists{"data-dismiss" => "fileinput", :href => "#"} Удалить

  .form-group
    =f.label 'Имя и фамилия', nil, class: 'col-sm-3 control-label'
    .col-sm-5
      =f.text_field :full_name, class: 'form-control'

  .form-group
    =f.label 'Телефон', nil, class: 'col-sm-3 control-label'
    .col-sm-5
      =f.text_field :phone, class: 'form-control'

  .form-group
    =f.label 'email', nil, class: 'col-sm-3 control-label'
    .col-sm-5
      =f.text_field :email, class: 'form-control'

  .form-group
    = f.label 'Пароль', nil, class: 'col-sm-3 control-label'
    .col-sm-5
      = f.password_field :password, class: 'form-control'

  .form-group
    = f.label 'Подтверждение пароля', nil, class: 'col-sm-3 control-label'
    .col-sm-5
      = f.password_field :password_confirmation , class: 'form-control'

  %br

  .form-group
    .col-sm-offset-3.col-sm-5
      = f.submit 'Сохранить', class: 'btn btn-success pull-right'