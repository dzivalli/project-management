= form_for @user do |f|
  - if action_name != 'password'
    .row
      .col-md-12
        .form-group
          = f.label 'Полное имя', nil, class: 'control-label'
          = f.text_field :full_name, class: 'form-control'
    .row
      .col-md-6
        .form-group
          = f.label 'Email', nil, class: 'control-label'
          = f.text_field :email, class: 'form-control'
      .col-md-6
        .form-group
          = f.label 'Телефон', nil, class: 'control-label'
          = f.text_field :phone, class: 'form-control'
    .row
      .col-md-6
        .form-group
          = f.label 'Компания', nil, class: 'control-label'
          - if @selected
            = f.collection_select :company_id, @companies, :id, :name, { selected: @selected }, {class: 'form-control'}
          - else
            = f.collection_select :company_id, @companies, :id, :name, { }, {class: 'form-control'}
      .col-md-6
        .form-group
          = f.label 'Роль', nil, class: 'control-label'
          = f.collection_select :role_id, @roles, :id, :name, { selected: @user.role_id }, {class: 'form-control'}
  - if action_name != 'edit' || action_name == 'password'
    .row
      .col-md-6
        .form-group
          = f.label 'Пароль', nil, class: 'control-label'
          = f.password_field :password, class: 'form-control'
      .col-md-6
        .form-group
          = f .label 'Подтверждение пароля', nil, class: 'control-label'
          = f.password_field :password_confirmation, class: 'form-control'

