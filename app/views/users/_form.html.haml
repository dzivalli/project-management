- if action_name != 'password'
  .row
    .col-md-6
      .form-group
        = f.label 'Полное имя', nil, class: 'control-label'
        = f.text_field :full_name, class: 'form-control'
    .col-md-6
      .form-group
        = f.label 'Логин', nil, class: 'control-label'
        = f.text_field :username, class: 'form-control'
  .row
    .col-md-6
      .form-group
        = f.label 'Email', nil, class: 'control-label'
        = f.text_field :email, class: 'form-control'
    .col-md-6
      .form-group
        = f.label 'Телефон', nil, class: 'control-label'
        = f.text_field :phone, class: 'form-control'
    .col-md-6
      .form-group
        = f.label 'Компания', nil, class: 'control-label'
        = f.collection_select :company_id, @companies, :id, :name, {}, {class: 'form-control'}
- if action_name != 'edit' || action_name == 'password'
  .row
    .col-md-6
      .form-group
        = f.label 'Пароль', nil, class: 'control-label'
        = f.password_field :password, class: 'form-control'
    .col-md-6
      .form-group
        = f .label 'Подтверждение пароля', nil, class: 'control-label'
        = f.password_field :password_confirmation, class: 'form-control'
