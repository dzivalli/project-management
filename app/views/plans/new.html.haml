= form_for @plan, html: { class: 'form-horizontal' } do |f|
  .form-group
    =f.label 'Имя', nil, class: 'col-sm-4 control-label'
    .col-sm-5
      =f.text_field :name, class: 'form-control'

  .form-group
    =f.label 'Цена (руб)', nil, class: 'col-sm-4 control-label'
    .col-sm-5
      =f.number_field :cost, class: 'form-control'

  .form-group
    =f.label 'Колличество месяцев (период)', nil, class: 'col-sm-4 control-label'
    .col-sm-5
      =f.number_field :term, class: 'form-control'




