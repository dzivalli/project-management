.modal-dialog
  .modal-content
    .modal-header
      = button_tag '×', type: 'button', class: 'close', data: { dismiss: 'modal'}, html: { 'aria-hidden' => 'true' }
      %h4.modal-title= @title
    .modal-body
      = yield
    .modal-footer
      = button_tag 'Закрыть', type: 'button', class: 'btn btn-default', data: { dismiss: 'modal'}
      - if action_name == 'pay'
        = button_tag 'Оплатить', type: 'button', id: 'save-modal', class: 'btn btn-info'
      - elsif action_name == 'invoice'
        = button_tag 'Создать', type: 'button', id: 'save-modal', class: 'btn btn-info'
      - else
        = button_tag 'Сохранить', type: 'button', id: 'save-modal', class: 'btn btn-info'