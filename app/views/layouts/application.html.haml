!!!
%html
  %head
    %title Pm
    = stylesheet_link_tag    'application', 'http://fonts.googleapis.com/css?family=Noto+Sans:400,700,400italic', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = javascript_include_tag 'login' if controller_name == 'sessions'
    = csrf_meta_tags
  %body.page-body{ class: ('login-page login-form-fall' if controller_name == 'sessions') }
    - unless content_for? :login
      .page-container
        = render 'common/sidebar'
        .main-content
          = render 'common/profile'
          %hr
          - if content_for? :project
            .tabs-vertical-env
              = render 'projects/menu'
              .tab-content
                .panel
                  .panel-body
                    = render 'projects/header'
                  .panel-body
                    = yield :project
          - else
            = yield
          = render 'common/flash'
          #new-modal.modal.fade
    - else
      = yield :login
